<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="701.0" prefWidth="358.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.User.RegistrationController">
    <children>
            <Label fx:id="firstNameLabel" text="First Name:" textFill="#d94e4e" />
            <TextField fx:id="firstNameField" promptText="First Name" />
            <Label fx:id="firstNameLabelfield" />

            <Label fx:id="cinLabel" text="CIN:" textFill="#d94e4e" />
            <TextField fx:id="cinField" promptText="CIN" />
            <Label fx:id="cinLabelField" />


            <Label fx:id="lastNameLabel" text="Last Name:" textFill="#d94e4e" />
            <TextField fx:id="lastNameField" prefHeight="25.0" prefWidth="343.0" promptText="Last Name" />
            <Label fx:id="lastNameLabelfield" />

            <Label fx:id="emailLabel" text="Email:" textFill="#d94e4e" />
            <TextField fx:id="emailField" promptText="Email" />
            <Label fx:id="emailLabelField" />


            <Label fx:id="addressLabel" text="Address:" textFill="#d94e4e" />
                <TextField fx:id="addressField" promptText="Address" />
            <Label fx:id="addresssLabelField" />

            <Label fx:id="passwordLabel" text="Password:" textFill="#d94e4e" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <Label fx:id="passwordLabelfield" />

            <Label fx:id="phoneNumberLabel" text="Phone Number:" textFill="#d94e4e" />
            <TextField fx:id="phoneNumber" prefHeight="26.0" prefWidth="342.0" promptText="phone Number" />
            <Label fx:id="phoneNumberLabelfield" />
        <Button fx:id="submitButton" layoutX="200.0" layoutY="144.0" mnemonicParsing="false" onAction="#submit" text="Register" textFill="#626e6a">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin></Button>
        <Button fx:id="nextButton" layoutX="200.0" layoutY="144.0" mnemonicParsing="false" onAction="#showNextFields" text="Next" textFill="#626e6a">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin></Button>
        <Button fx:id="previousButton" layoutX="200.0" layoutY="144.0" mnemonicParsing="false" onAction="#previous" text="Previous" textFill="#626e6a">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin></Button>

    </children>
</VBox>
